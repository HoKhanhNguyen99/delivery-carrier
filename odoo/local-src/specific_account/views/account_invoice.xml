<odoo>

    <!-- Hide default button for in_invoice or in_refund invoices -->
    <record id="invoice_supplier_form" model="ir.ui.view">
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_supplier_form"/>
        <field name="arch" type="xml">
            <button name="invoice_open" position="attributes">
                <attribute name="invisible">context.get('type') in ('in_invoice', 'in_refund')</attribute>
            </button>
            <!-- Add validate button for in_invoice and in_refund type with account.group_account_user groups -->
            <button name="invoice_open" position="after">
                <button name="invoice_open" states="draft,proforma2" string="Validate" class="oe_highlight" groups="account.group_account_user"/>
            </button>

        </field>
    </record>

</odoo>
