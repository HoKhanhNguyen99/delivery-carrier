<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Hide refund mode choice (and description divs) for billing user -->
    <record id="view_account_invoice_refund" model="ir.ui.view">
        <field name="model">account.invoice.refund</field>
        <field name="inherit_id" ref="account.view_account_invoice_refund"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='filter_refund']/parent::group/following::group" position="attributes">
                <attribute name="groups">account.group_account_user</attribute>
            </xpath>
            <xpath expr="//field[@name='filter_refund']/parent::group" position="attributes">
                <attribute name="groups">account.group_account_user</attribute>
            </xpath>
        </field>
    </record>
</odoo>
