<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="view_building_project_form" model="ir.ui.view">
    <field name="name">building.project.form</field>
    <field name="model">building.project</field>
    <field name="arch" type="xml">
      <form string="Building Project">
        <header>
          <field name="stage_id" widget="statusbar" clickable="True"/>
        </header>
        <sheet string="Building Project">
          <div class="oe_button_box" name="button_box">
            <button class="oe_stat_button o_res_partner_tip_opp" type="object"
              name="action_opportunities"
              icon="fa-star">
              <div class="o_stat_info">
                <field name="opportunity_count" widget="o_stat_value"/>
                <span class="o_stat_text" attrs="{'invisible': [('opportunity_count', '&lt;', 2)]}"> Opportunities</span>
                <span class="o_stat_text" attrs="{'invisible': [('opportunity_count', '&gt;', 1)]}"> Opportunity</span>
              </div>
            </button>
            <button class="oe_stat_button" type="object"
              name="action_sale_orders"
              icon="fa-usd">
              <field name="sale_order_count" widget="o_stat_value"/>
              <span class="o_stat_text" attrs="{'invisible': [('sale_order_count', '&lt;', 2)]}"> Sales orders</span>
              <span class="o_stat_text" attrs="{'invisible': [('sale_order_count', '&gt;', 1)]}"> Sales order</span>
            </button>
            <button  class="oe_stat_button" name="attachment_tree_view"  type="object" icon="fa-files-o">
                <field string="Documents" name="doc_count" widget="statinfo"/>
            </button>
            <button class="oe_stat_button" type="object"
              name="action_schedule_meeting" icon="fa-calendar">
              <div class="o_stat_info">
                <field name="meeting_count" class="o_stat_value"/>
                <span class="o_stat_text" attrs="{'invisible': [('meeting_count', '&lt;', 2)]}"> Activities</span>
                <span class="o_stat_text" attrs="{'invisible': [('meeting_count', '&gt;', 1)]}"> Activity</span>
              </div>
            </button>
          </div>
          <div class="oe_title">
            <label for="name" string="Building Project"/>
            <h1>
              <field name="name" class="oe_inline" placeholder="e.g. Building Project XYZ"/>
            </h1>
          </div>
          <div>
            <p>Go to the related project:<field name="project_id" readonly="1" required="0" class="oe_inline"/>.
            </p>
            <group>
              <group>
                <field name="business_area"/>
                <field name="project_type_id"/>
              </group>
            </group>
          </div>
          <div name="project"/>
          <group name="main">
            <group>
              <field name="code" />
              <field name="user_id" />
              <field name="building_project_tag_ids" widget="many2many_tags"/>
            </group>
            <group>
              <field name="build_activity"/>
              <field name="date_start" />
              <field name="date_end" />
            </group>
            <group>
              <field name="expected_amount" />
              <field name="probability" />
            </group>
          </group>
          <notebook colspan="4">
            <page string="Customers" autofocus="autofocus">
              <field name="customer_discount_ids">
                <tree editable="bottom">
                  <field name="partner_id"/>
                  <field name="pricelist_id"/>
                </tree>
              </field>
            </page>
            <page string="Contacts">
              <field name="contact_ids" mode="kanban" context="{}">
                <kanban>
                  <field name="color"/>
                  <field name="name"/>
                  <field name="title"/>
                  <field name="type"/>
                  <field name="email"/>
                  <field name="is_company"/>
                  <field name="function"/>
                  <field name="phone"/>
                  <field name="zip"/>
                  <field name="city"/>
                  <field name="country_id"/>
                  <field name="mobile"/>
                  <field name="fax"/>
                  <field name="state_id"/>
                  <field name="image"/>
                  <templates>
                    <t t-name="kanban-box">
                      <t t-set="color" t-value="kanban_color(record.color.raw_value)"/>
                      <div t-att-class="color + (record.title.raw_value == 1 ? ' oe_kanban_color_alert' : '') + ' oe_kanban_global_click'">
                        <a t-if="!read_only_mode" type="delete" class="fa fa-times pull-right"/>
                        <div class="o_kanban_image">
                          <img t-if="record.image.raw_value" t-att-src="'data:image/png;base64,'+record.image.raw_value"/>
                          <t t-if="!record.image.raw_value">
                            <img t-if="record.type.raw_value === 'delivery'" t-att-src='_s + "/base/static/src/img/truck.png"'/>
                            <img t-if="record.type.raw_value === 'invoice'" t-att-src='_s + "/base/static/src/img/money.png"'/>
                            <t t-if="record.type.raw_value !== 'invoice' &amp;&amp; record.type.raw_value !== 'delivery'">
                              <img t-if="record.is_company.raw_value === true" t-att-src='_s + "/base/static/src/img/company_image.png"'/>
                              <img t-if="record.is_company.raw_value === false" t-att-src='_s + "/base/static/src/img/avatar.png"'/>
                            </t>
                          </t>
                        </div>
                        <div class="oe_kanban_details">
                          <div><b><field name="role"/></b></div>
                          <field name="name"/>
                          <div t-if="record.function.raw_value"><field name="function"/></div>
                          <div t-if="record.email.raw_value"><field name="email"/></div>
                          <div t-if="record.type.raw_value != 'contact'">
                            <div>
                              <field name="zip"/>
                              <field name="city"/>
                            </div>
                            <field t-if="record.state_id.raw_value" name="state_id"/>
                            <field name="country_id"/>
                          </div>
                          <div t-if="record.phone.raw_value">Phone: <field name="phone"/></div>
                          <div t-if="record.mobile.raw_value">Mobile: <field name="mobile"/></div>
                          <div t-if="record.fax.raw_value">Fax: <field name="fax"/></div>
                        </div>
                      </div>
                    </t>
                  </templates>
                </kanban>
                <form string="Contact / Address">
                  <sheet>
                    <group>
                      <field name="role"/>
                      <field name="partner_id"/>
                    </group>
                  </sheet>
                </form>
              </field>
            </page>
            <page string="Info">
              <group>
                <group>
                  <field name="build_progress"/>
                </group>
                <group>
                  <field name="build_type"/>
                </group>
              </group>
            </page>
            <page string="Address">
              <group>
                <group>
                  <field name="street" placeholder="Street..." class="o_address_street"/>
                  <field name="zip_id"
                    options="{'create_name_field': 'city', 'no_open': True, 'no_create': True}"
                    placeholder="City completion"
                    class="oe_edit_only" />
                  <field name="city" placeholder="City" class="o_address_city"/>
                  <field name="state_id" class="o_address_state" placeholder="State" options='{"no_open": True}' context="{'country_id': country_id, 'zip': zip}"/>
                  <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                  <field name="country_id" placeholder="Country" class="o_address_country" options='{"no_open": True, "no_create": True}'/>
                  <field name="region_id" placeholder="Region..."/>
                </group>
            </group>
            </page>
          </notebook>
        </sheet>
        <div class="oe_chatter">
          <field name="message_follower_ids" widget="mail_followers"/>
          <field name="message_ids" widget="mail_thread"/>
        </div>
      </form>
    </field>
  </record>

  <record id="view_building_project_kanban" model="ir.ui.view">
    <field name="name">building.project.kanban</field>
    <field name="model">building.project</field>
    <field name="arch" type="xml">
      <kanban class="oe_background_grey o_kanban_dashboard o_project_kanban" default_group_by="stage_id">
        <field name="name"/>
        <field name="expected_amount"/>
        <field name="date_start"/>
        <field name="date_end"/>
        <field name="stage_id"/>
        <field name="user_id"/>
        <field name="color"/>
        <field name="build_activity"/>
        <field name="opportunity_count"/>
        <field name="sale_order_count"/>
        <field name="meeting_count"/>
        <field name="doc_count"/>
        <templates>
          <t t-name="kanban-box">
            <div t-attf-class="#{kanban_color(record.color.raw_value)} oe_kanban_global_click">
              <div class="o_project_kanban_main">
                <div class="o_kanban_card_content o_visible">
                  <div class="o_kanban_primary_left">
                    <div class="o_primary">
                      <div class="build_activity">
                        <span t-if="record.build_activity.raw_value == 'active'">
                          <i class="fa fa-star fa-2x colored-stars"/>
                        </span>
                        <span t-if="record.build_activity.raw_value == 'passive'">
                          <span class="fa-stack">
                            <i class="fa fa-star-o fa-stack-2x stars"/>
                            <i class="fa fa-star-half fa-stack-2x colored-stars"/>
                          </span>
                        </span>
                        <span t-if="record.build_activity.raw_value == 'inactive'">
                          <i class="fa fa-star-o fa-2x"/>
                        </span>
                      </div>
                      <span><i class="fa fa-building"/> <t t-esc="record.name.value"/></span>
                    </div>
                    <div>
                      <span t-if="record.date_start.raw_value and record.date_end.raw_value">
                        <i class="fa fa-calendar"/> <t t-esc="record.date_start.value"/>
                        <i class="fa fa-angle-double-right"/> <t t-esc="record.date_end.value"/>
                      </span>
                    </div>
                    <div t-if="record.expected_amount.raw_value">
                      <span><t t-esc="record.expected_amount.value"/> CHF</span>
                    </div>
                  </div>
                </div>
                <div class="o_kanban_card_manage_pane o_invisible">
                  <div class="o_kanban_card_manage_section o_kanban_manage_reports">
                    <div>
                      <a name="action_sale_orders" type="object">Opportunities</a>
                    </div>
                  </div>
                  <div t-if="widget.editable" class="o_project_kanban_colorpicker">
                    <ul class="oe_kanban_colorpicker" data-field="color"/>
                  </div>
                </div>
                <div class="o_project_kanban_manage">
                  <a class="o_kanban_manage_toggle_button" href="#">More <i class="fa fa-caret-down"/></a>
                </div>
              </div>

              <div class="o_project_kanban_boxes">
                <a name="action_opportunities" class="o_project_kanban_box" type="object">
                  <span class="o_value"><i class="fa fa-star"/> <t t-esc="record.opportunity_count.raw_value"/></span>
                  <span class="o_label">Opportunities</span>
                </a>
                <a name="action_sale_orders" class="o_project_kanban_box" type="object">
                  <span class="o_value"><i class="fa fa-usd"/> <t t-esc="record.sale_order_count.raw_value"/></span>
                  <span class="o_label">Sales orders</span>
                </a>
                <a t-if="record.doc_count.raw_value" class="o_project_kanban_box" name="attachment_tree_view" type="object">
                  <span class="o_value"><i class="fa fa-files-o"/> <t t-esc="record.doc_count.value"/></span>
                  <span class="o_label">Documents</span>
                </a>
                <a t-if="record.meeting_count.raw_value" class="o_project_kanban_box" name="action_schedule_meeting" type="object">
                  <span class="o_value"><i class="fa fa-calendar"/> <t t-esc="record.meeting_count.value"/></span>
                  <span class="o_label">Activities</span>
                </a>
              </div>
            </div>
          </t>
        </templates>
      </kanban>
    </field>
  </record>

  <record id="view_building_project_filter" model="ir.ui.view">
    <field name="name">building.project.select</field>
    <field name="model">building.project</field>
    <field name="arch" type="xml">
      <search string="Search Building Project">
        <field name="name" string="Building Project Name"/>
        <field name="stage_id"/>
        <field name="build_type"/>
        <field name="build_progress"/>
        <field name="building_project_tag_ids"/>
        <field name="business_area"/>
        <field name="build_activity"/>
        <separator/>
        <filter string="Manager" domain="[('user_id','=',uid)]"/>
        <group expand="0" string="Group By">
          <filter string="Bauprojekt-Status" context="{'group_by':'stage_id'}"/>
          <filter string="Bauprojekt-Typ" context="{'group_by':'build_type'}"/>
          <filter string="Bauprojekt-Fortschritt" context="{'group_by':'build_progress'}"/>
          <filter string="Geschäftsfeld" context="{'group_by':'business_area'}"/>
        </group>
      </search>
    </field>
  </record>

  <record id="view_building_project" model="ir.ui.view">
    <field name="name">building.project.tree</field>
    <field name="model">building.project</field>
    <field name="arch" type="xml">
      <tree decoration-bf="'message_needaction'==True" decoration-info="'state' in ('draft','pending')" decoration-muted="'state' in ('close','cancelled')" string="Building Projects">
        <field name="business_area"/>
        <field name="name" string="Building Project Name"/>
        <field name="user_id"/>
        <field name="stage_id"/>
        <field name="build_type"/>
        <field name="build_progress"/>
        <field name="building_project_tag_ids"/>
        <field name="build_activity" invisible="True"/>
      </tree>
    </field>
  </record>

  <record id="action_view_building_project" model="ir.actions.act_window">
    <field name="name">Building Project</field>
    <field name="res_model">building.project</field>
    <field name="view_type">form</field>
    <field name="domain">[]</field>
    <field name="view_mode">kanban,tree,form</field>
    <field name="search_view_id" ref="view_building_project_filter"/>
    <field name="help" type="html">
      <p class="oe_view_nocontent_create">
        Create a new building project.
      </p>
    </field>
  </record>

  <menuitem action="action_view_building_project" id="menu_view_building_project" parent="base.menu_sales" sequence="6"/>
</odoo>
