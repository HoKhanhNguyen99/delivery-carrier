<odoo>
    <template id="report_stock_inventory" inherit_id="stock.report_inventory">
        <xpath expr="//table//th[@groups='stock.group_production_lot']" position="after">
            <th><strong>Description on picking</strong></th>
        </xpath>

        <xpath expr="//table//t[@t-as='location']/tr//td[@groups='stock.group_production_lot']" position="after">
            <td/>
        </xpath>

        <xpath expr="//table//tr[@t-as='line']//td[@groups='stock.group_production_lot']" position="after">
            <td><span t-field="line.description_picking"/></td>
        </xpath>

    </template>
</odoo>
