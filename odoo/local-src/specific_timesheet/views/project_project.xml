<odoo>
    <record id="project_edit_use_timesheets" model="ir.ui.view">
        <field name="name">project.project.form</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project_timesheet.project_invoice_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='use_tasks']/parent::div" position='before'>
                <div>
                    <field name="use_timesheets"/>
                    <label for="use_timesheets"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
