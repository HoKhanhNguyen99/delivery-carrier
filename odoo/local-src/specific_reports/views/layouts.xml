<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <template id="external_layout_header" inherit_id="report.external_layout_header">
      <xpath expr="//div[@class='header']" position="replace">
        <div class="header" t-if="env.context.get('tpl_partners_only')">
          <div class="row mt0" t-att-style="'padding-top: 16px; width: 930px; background-size: 930px; background-repeat: no-repeat; background-image: url(''data:image/png;base64,%s'')' % company.report_logo">
            <div class="col-xs-2">
            </div>
            <div class="col-xs-8" style="padding-left: 30px;">
              <p>
                <small>
                  <small>
                  Intelligente Beleuchtungstechnik<br/>
                  Gestion intelligente de l'Ã©clairage<br/>
                  Gestione intelligente dell'illuminazione
                  </small>
                </small>
              </p>
              <br/>
            </div>
            <div class="col-xs-2 text-center" name="company_address">
              <small>
                <small>
                  <span t-field="company.email"/><br/>
                  <span t-raw="company.website[7:]"/>
                </small>
              </small>
            </div>
          </div>
        </div>
      </xpath>
    </template>

    <template id="external_layout_footer" inherit_id="account.external_layout_footer">
      <xpath expr="//div[@class='footer']" position="replace">
        <div class="footer">
          <div class="text-center">
            <small>
              <small>
                <small>
                  <div class="col-xs-1"> </div>
                  <div class="col-xs-10">
                  <strong t-field="company.name"/>
                  <span t-field="company.street"/>,
                  <span t-field="company.zip"/>
                  <span t-field="company.city"/>,&amp;nbsp;
                  Tel: <span t-field="company.phone"/>
                  Fax: <span t-field="company.fax"/>
                  Technik-Hotline: +41 43 844 80 77,
                  <span t-field="company.email"/>,
                  <span t-raw="company.website[7:]"/>
                  </div>
                    <div class="text-right col-xs-1">
                    <span>Page:</span>
                    <span class="page"/>/<span class="topage"/>
                  </div>
                </small>
              </small>
            </small>
          </div>
        </div>
      </xpath>
    </template>
  </data>

  <data>
    <record id="report.paperformat_euro" model="report.paperformat">
        <field name="name">European A4</field>
        <field name="default" eval="True" />
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">25</field>
        <field name="margin_bottom">10</field>
        <field name="margin_left">0</field>
        <field name="margin_right">0</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">25</field>
        <field name="dpi">90</field>
    </record>

  </data>
</openerp>
