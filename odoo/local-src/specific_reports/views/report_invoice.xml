<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_invoice_document" inherit_id="account.report_invoice_document">
      <xpath expr="//div[@class='page']" position="attributes">
        <attribute name="style">margin-left: 60px !important;</attribute>
      </xpath>

      <!-- Put address on left side for letter -->
      <xpath expr="//div[@class='row']/div/address[@t-field='o.partner_id']/.." position="replace">
        <!-- 1 Address IF no eev_nr or eev_alarm for a company or contact in a company AND
        payment term not to the EEV -->
        <t t-if="not (o.partner_id.eev_member or o.partner_id.parent_id.eev_member) or (o.partner_id.eev_alarm or o.partner_id.parent_id.eev_alarm) or not (o.payment_term_id == o.env.ref('scenario.account_payment_term_eev'))">
          <div class="col-xs-6">
              <t t-if="o.partner_id.parent_id">
                <span t-field="o.partner_id.parent_id"/><br/>
              </t>
              <t t-if="not o.partner_id.parent_id">
                <span t-field="o.partner_id.name"/>
              </t>
            <address t-field="o.partner_id"
                t-field-options='{"widget": "contact", "fields": ["address"], "no_marker": true}' />
            <span t-if="o.partner_id.vat">TIN: <span t-field="o.partner_id.vat"/></span>
          </div>
        </t>
        <!-- Address of eev & partner IF eev and not eev_alarm for company or contact in a company AND
          payment term is EEV -->
        <t t-if="(o.partner_id.eev_member or o.partner_id.parent_id.eev_member) and not (o.partner_id.eev_alarm or o.partner_id.parent_id.eev_alarm) and (o.payment_term_id == o.env.ref('scenario.account_payment_term_eev'))">
          <div class="col-xs-6">
            <span t-field="o.env.ref('scenario.partner_90424').name"/><br/>
            <span t-field="o.env.ref('scenario.partner_90424').street"/><br/>
            <span t-field="o.env.ref('scenario.partner_90424').country_id.code"/>-<span t-field="o.env.ref('scenario.partner_90424').zip"/> <span t-field="o.env.ref('scenario.partner_90424').city"/><br/>
          </div>
          <div class="col-xs-5">
            <t t-if="o.partner_id.parent_id">
              <b>Rechnung für: EEV-Nr. <span t-esc="o.partner_id.parent_id.eev_number.zfill(8)"/></b><br/>
              <span t-field="o.partner_id.parent_id"/><br/>
            </t>
            <t t-if="not o.partner_id.parent_id">
              <b>Rechnung für: EEV-Nr. <span t-esc="o.partner_id.eev_number.zfill(8)"/></b><br/>
              <span t-field="o.partner_id.name"/><br/>
            </t>
              <address t-field="o.partner_id"
                  t-field-options='{"widget": "contact", "fields": ["address"], "no_marker": true}' />
              <span t-if="o.partner_id.vat">TIN: <span t-field="o.partner_id.vat"/></span>
          </div>
        </t>
      </xpath>

      <xpath expr="//div[@class='row']" position="before">
        <style type="text/css">
          h2{
              font-weight: bold;
              font-size: 18px;
          }
          #informations{
              padding-bottom: 12px;
              margin-bottom: 12px;
          }
          .page{
              margin-right: 25px !important;
          }
          .address{
              position: fixed;
              left: 186px;
          }
          .lp-0{
            padding-left: 0px;
		  }
        </style>
        <!-- Informations contact on top of page -->
        <small>
          <div class="row">
            <div class="col-xs-12" style="text-align: right;">
              <small>
                <small>
                  <strong>
                    Your client manager
                  </strong> <span t-field="o.user_id.partner_id"/><br/>
                  Tel:
                  <t t-if="o.user_id">
                    <span t-field="o.get_employee_from_user(o.user_id).work_phone"/><br/>
                  </t>                  
                  <span t-field="o.user_id.email"/><br/>
                </small>
              </small>
            </div>
          </div>
          <div class="col-xs-12" style="text-decoration: underline; padding-left: 0px;">
            <br/><br/><br/>
            <span t-field="o.company_id.name"/>, <span t-field="o.company_id.street"/>, <span t-field="o.company_id.zip"/> <span t-field="o.company_id.city"/>
            <br/>
            <br/>
          </div>

        </small>
      </xpath>

      <!-- References of Invoice before InvoiceLines -->
      <xpath expr="//div[@class='row mt32 mb32']" position="replace">
        <div class="row mt32 mb32" id="informations">
            <div t-if="o.name" class="col-xs-6 lp-0" name="reference">
                <div class="col-xs-5"><strong>Your Reference:</strong>
                  <span class="address"><strong t-field="o.name"/></span>
                </div>
            </div>
            <div class="col-xs-7"></div>
            <div class="col-xs-6 lp-0">
              <div t-if="o.partner_id.parent_id" class="col-xs-12" style="padding-left: 0px;">
                  <span class="col-xs-5">Contact:</span>
                  <span class="address" t-field="o.partner_id.name"/>
              </div>
              <div t-if="o.client_order_contact_type" class="col-xs-12 lp-0">
                  <span class="col-xs-5">Your order:</span>
                  <span class="address">
                    <span t-field="o.client_order_contact_type"/><t t-if="o.client_order_date">, <span t-field="o.client_order_date"/></t>
                  </span>
              </div>
              <div class="col-xs-12 lp-0">
                  <span class="col-xs-5">Client number:</span>
                  <span class="address" t-field="o.partner_id.ref"/>
              </div>
              <div name="payment_term" t-if="o.company_id.vat" class="col-xs-12 lp-0">
                  <span class="col-xs-5">VAT number:</span>
                  <span class="address" t-field="o.company_id.vat"/>
              </div>
            </div>
            <div class="col-xs-6 lp-0">
              <div t-if="o.create_date" class="col-xs-12">
                  <span class="col-xs-5">Date:</span>
                  <span t-field="o.create_date" t-field-options='{"widget":"date"}'/>
              </div>
            </div>

        </div>
        <t t-set="line_counter" t-value="0"/>
      </xpath>

      <!-- Payment term at the end of the document -->
      <xpath expr="//p[@t-if='o.payment_term_id']" position="replace">
        <p t-if="o.payment_term_id">
          Payment term:
          <span t-field="o.payment_term_id.note" string="Payment term:"/>
        </p>
        <p t-if="not o.payment_term_id and o.partner_id.property_payment_term_id">
          <span t-field="o.partner_id.property_payment_term_id.note" string="Payment term:"/>
        </p>
      </xpath>

    </template>

    <!-- Invoice Line-->
    <template id="report_invoice_layouted" inherit_id="sale_layout.report_invoice_layouted">

      <xpath expr="//t[@t-as='l']/tr" position="replace">
        <tr>
          <td>
            <t t-set="line_counter" t-value="line_counter + 1"/>
            <span t-raw="line_counter"/>
          </td>
          <td class="text-right">
            <t t-if="l.uom_id == o.env.ref('product.product_uom_unit')">
              <span t-raw="int(l.quantity or 0)"/>
            </t>
            <t t-if="l.uom_id != o.env.ref('product.product_uom_unit')">
              <span t-raw="round(l.quantity, 2)"/>
            </t>
            <span groups="product.group_uom" t-field="l.uom_id"/>
          </td>
          <td>
            <t t-if="l.product_id.e_nr">
              <span  t-field="l.product_id.e_nr"/>
            </t>
            <t t-if="not l.product_id.e_nr">
              <span  t-field="l.product_id.default_code"/>
            </t>
          </td>
          <td>
              <span  t-field="l.name"/>
          </td>
          <td class="text-right">
            <span t-field="l.price_unit"/>
          </td>
          <td class="text-right" groups="sale.group_discount_per_so_line">
            <span t-esc="round(l.public_discount, 1)"/><br/>
            <span t-esc="round(l.project_discount, 1)"/>
          </td>
          <td class="text-right">
            <span t-field="l.price_unit_discount"/>
          </td>
		  <td class="text-right">
            <span t-esc="', '.join(map(lambda x: (x.description or x.name), l.invoice_line_tax_ids))"/>
          </td>
          <td class="text-right">
            <span t-field="l.price_subtotal"/>
          </td>
        </tr>
      </xpath>

      <!-- INV Line table description -->
      <xpath expr="//thead/tr" position="replace">
        <tr>
          <th>Pos.</th>
          <th class="text-right">Quantity</th>
          <th>Product Num.</th>
          <th>Description</th>
          <th class="text-right">Unit Price</th>
          <th groups="sale.group_discount_per_so_line" class="text-right">
            <span>
              Disc.(%)
            </span>
          </th>
          <th class="text-right" groups="sale.group_discount_per_so_line">Net</th>
          <th class="text-right">Taxes</th>
		  <th class="text-right">Price</th>
        </tr>
      </xpath>

    </template>

</odoo>
