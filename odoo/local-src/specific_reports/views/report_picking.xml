<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="report_picking_location" inherit_id="stock.report_picking">

        <xpath expr="//span[@t-field='pack_operation.location_id']/parent::td" position="attributes">
           <attribute name="style">width:20%;</attribute>
        </xpath>
        <xpath expr="//table[@t-if='o.pack_operation_ids']/thead/tr/th[2]" position="attributes">
           <attribute name="class">text-left</attribute>
        </xpath>

        <xpath expr="//span[@t-field='pack_operation.location_id']" position="replace">
            <span t-field="pack_operation.product_id.description_picking"/>
        </xpath>

        <xpath expr="//table[2]/thead/tr/th/strong" position="replace">
            <strong>Product<br/>E-NR</strong>
        </xpath>
        //table[@t-if='o.pack_operation_ids']/thead/tr/th[2]
        <xpath expr="//span[@t-field='pack_operation.product_id']" position="after">
            <br/>
            <span t-field="pack_operation.product_id.cut_e_nr"/>
        </xpath>
        <xpath expr="//tr[@t-foreach='o.pack_operation_ids']//img" position="attributes">
           <attribute name="style">width:300px;height:50px;margin-bottom:40px</attribute>
        </xpath>
       <span t-field="pack_operation.product_id"/>
        <xpath expr="//span[@t-field='pack_operation.product_id']/parent::td" position="attributes">
           <attribute name="style">width:40%;</attribute>
        </xpath>

        <xpath expr="//span[@t-field='pack_operation.product_qty']/parent::td" position="attributes">
           <attribute name="class">text-left</attribute>
           <attribute name="style">width:10%;</attribute>
        </xpath>


        <xpath expr="//tr[@t-foreach='o.pack_operation_ids']" position="attributes">
           <attribute name="style">border-top: 2px solid black !important;</attribute>
        </xpath>
        <xpath expr="//tr[@t-foreach='o.pack_operation_ids']" position="attributes">
           <attribute name="t-foreach">o.pack_operation_ids.sorted(key=lambda l: l.product_id.description_picking)</attribute>
        </xpath>



    </template>
</odoo>
