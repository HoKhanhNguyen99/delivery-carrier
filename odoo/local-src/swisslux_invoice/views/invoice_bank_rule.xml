<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record model="ir.ui.view" id="invoice_bank_rule_tree_view">
    <field name="name">invoice.bank.rule.tree</field>
    <field name="model">invoice.bank.rule</field>
    <field name="arch" type="xml">
      <tree string="Invoice Bank Rules" editable="bottom">
        <field name="name"/>
        <field name="partner_bank_id"/>
        <field name="country_id"/>
        <field name="company_id" groups="base.group_multi_company"/>
        <field name="company_partner_id" invisible="True"/>
      </tree>
    </field>
  </record>

  <record model="ir.actions.act_window" id="invoice_bank_rule_list_action">
    <field name="name">Invoice Bank Rule</field>
    <field name="res_model">invoice.bank.rule</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree</field>
    <field name="help" type="html">
      <p class="oe_view_nocontent_create">Create the first rule to set a specific bank depending on customer country on your invoices.</p>
    </field>
  </record>

  <menuitem id="invoice_bank_rule_menu" name="Invoice Bank rules" parent="account.account_account_menu" sequence="11"
    action="invoice_bank_rule_list_action"/>
</odoo>
