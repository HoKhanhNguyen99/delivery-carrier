<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_company_group" model="ir.ui.view">
        <field name="name">sale.order.form.company_group</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="model">sale.order</field>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="company_group_id"/>
            </field>
        </field>
    </record>

    <record id="view_order_tree_company_group" model="ir.ui.view">
        <field name="name">sale.order.tree.company_group</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="model">sale.order</field>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="company_group_id"/>
            </field>
        </field>
    </record>

    <record id="view_sales_order_filter_company_group" model="ir.ui.view">
        <field name="name">sale.order.list.select</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter"/>
        <field name="model">sale.order</field>
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                 <field name="company_group_id"/>
            </field>
            <filter name="customer" position="after">
               <filter name="group_company_group" string="Company Group" domain="[]" context="{'group_by':'company_group_id'}"/>
            </filter>
        </field>
    </record>

</odoo>
