<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <record id="filter_isale_turnover" model="ir.filters">
        <field name="name">Turnover</field>
        <field name="model_id">account.invoice.report</field>
        <field name="user_id" eval="False"/>
        <field name="context">{'group_by': ['company_group_id', 'income_partner_id', 'commercial_partner_id']}</field>
    </record>

    <record id="filter_isale_company_group" model="ir.filters">
        <field name="name">By Company Group</field>
        <field name="model_id">account.invoice.report</field>
        <field name="user_id" eval="False"/>
        <field name="context">{'group_by': ['company_group_id']}</field>
    </record>



    <record id="view_account_invoice_report_search_over" model="ir.ui.view">
        <field name="name">account.invoice.report.search.company</field>
        <field name="model">account.invoice.report</field>
        <field name="inherit_id" ref="account.view_account_invoice_report_search"/>
        <field name="arch" type="xml">
            <field name="user_id" position="after">
                 <field name="company_group_id"/>
                 <field name="income_partner_id"/>
            </field>
        </field>
    </record>

</odoo>
