<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <record id="filter_isale_report_product" model="ir.filters">
        <field name="name">By Compagny Group</field>
        <field name="model_id">sale.report</field>
        <field name="user_id" eval="False"/>
        <field name="context">{'group_by': ['date:month', 'company_group_id']}</field>
    </record>


    <record id="view_order_product_search_over" model="ir.ui.view">
        <field name="name">sale.report.search.company</field>
        <field name="model">sale.report</field>
        <field name="inherit_id" ref="sale.view_order_product_search"/>
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                 <field name="company_group_id"/>
            </field>
            <filter name="User" position="after">
               <filter name="group_company_group" string="Company Group" domain="[]" context="{'group_by':'company_group_id'}"/>
            </filter>
        </field>
    </record>

</odoo>
